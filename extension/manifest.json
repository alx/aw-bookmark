{
  "manifest_version": 2,
  "name": "AW Bookmark",
  "version": "1.2.1",
  "description": "Save bookmarks to ActivityWatch with one click",
  "browser_specific_settings": {
    "gecko": {
      "id": "aw-bookmark@activitywatch.net",
      "strict_min_version": "115.0"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Save to ActivityWatch"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "98": "icons/icon-98.png"
  }
}
